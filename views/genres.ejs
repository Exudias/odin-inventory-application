<div class="basic-view">
    <div class="basic-view-header">
        <h1>Genres (<%= genres.length %>)</h1>
        <a href="/genres/new"><button class="add-button">+</button></a>
    </div>
    <div>
        <ul>
        <% for (let i = 0; i < genres.length; i++) { %>
            <li>
                <a href="/genres/<%= genres[i].id %>"><%= genres[i].name %></a>
                <form action="/genres/<%= genres[i].id %>?_method=DELETE" method="POST">
                    <button type="submit" class="close-button">X</button>
                </form>
            </li>
        <% } %>
        </ul>
    </div>
</div>