<div class="add-view">
    <h1>Update a game: <%= game.title %></h1>
    <% if (locals.errors) {%>
        <ul>
          <% errors.forEach(function(error) { %>
            <li><%= error.msg %></li>
          <% }); %>
        </ul>
    <% } %>
    <form action="/games/<%= id %>?_method=PUT" method="POST">
        <label>
            Game name:
            <input type="text" name="new_title" value="<%= game.title %>" minlength="1" maxlength="255" required/>
        </label>
        <label>
            Release year:
            <input type="date" name="new_release_date" value="<%= game.release_date %>" required/><br>
        </label>
        <button type="submit">Submit</button>
    </form>
</div>