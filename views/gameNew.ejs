<div class="add-view">
    <h1>Create a new game</h1>
    <% if (locals.errors) {%>
        <ul>
          <% errors.forEach(function(error) { %>
            <li><%= error.msg %></li>
          <% }); %>
        </ul>
    <% } %>
    <form action="/games/new" method="POST">
        <label>
            Game name:
            <input type="text" name="title" minlength="1" maxlength="255" required/>
        </label>
        <label>
            Release year:
            <input type="date" name="release_date" value="1999-01-01" required/><br>
        </label>
        <button type="submit">Submit</button>
    </form>
</div>